        "OIL_",
        "WTI",
        "BRENT",
        "CRUDE",
        "OPEC",
        "ENERGY_OIL"
      ]
    }
  },

  "OIL_CORE": {
    "tone_filter": {"enabled": false},
    "co_occurrence": {"enabled": false}
  },

  "SUPPLY_CHAIN": {
    "tone_filter": {"enabled": false},
