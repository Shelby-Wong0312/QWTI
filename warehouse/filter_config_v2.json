      "enabled": true,
      "threshold": -1.0,
      "operator": "<"
    },
    "co_occurrence": {
      "enabled": false
    }
  },

  "GEOPOL": {
    "tone_filter": {
      "enabled": true,
      "threshold": -2.0,
      "operator": "<"
